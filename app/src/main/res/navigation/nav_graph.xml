<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/agendaFragment">

    <fragment
        android:id="@+id/agendaFragment"
        android:name="com.gustavo.agenda.ui.eventdate.presentation.EventDateFragment"
        android:label="Agenda"
        >
        <action
            android:id="@+id/action_agendaFragment_to_eventConfigFragment"
            app:destination="@id/eventConfigFragment"
            />
        <action
            android:id="@+id/action_agendaFragment_to_eventDetail"
            app:destination="@id/eventDetailFragment" />

    </fragment>
    <fragment
        android:id="@+id/eventConfigFragment"
        android:name="com.gustavo.agenda.ui.eventConfig.presentation.EventConfigFragment"
        android:label="Cadastro de Evento" >
        <argument android:name="date_day" app:argType="integer"/>
        <argument android:name="date_month" app:argType="integer"/>
        <argument android:name="date_year" app:argType="integer"/>
    </fragment>

    <fragment
        android:id="@+id/eventDetailFragment"
        android:name="com.gustavo.agenda.ui.eventDetail.EventDetailFragment"
        android:label="Detalhe" />
</navigation>